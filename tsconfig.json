{
  "compilerOptions": {
    

 
    "target": "es2016",                                
    "module": "commonjs",                                
    "rootDir": "./src",                                  
   
    "resolveJsonModule": true,                        
      
     "outDir": "./dist",                                   
    "esModuleInterop": true,        
    
    "forceConsistentCasingInFileNames": true,           

    
    "strict": true,                                    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": false,                    
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]

}
